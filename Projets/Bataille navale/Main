import pygame 
from pygame.locals import *
from Background_game import Init_fond

pygame.init() #initialisation des modules

fenetre=pygame.display.set_mode((1500,1000),RESIZABLE) #créer un affichage
fond_menu=pygame.image.load(Init_fond.image_menu).convert() #création du fond d'ecran
fenetre.blit(fond_menu,(0,0))
pygame.display.flip()

infini=1
while infini: #la fenetre reste ouverte
    for event in pygame.event.get():
        if event.type==QUIT: #si on veut quitter
            infini=0
        